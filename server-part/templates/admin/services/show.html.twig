{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <h1>Services</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ service.token }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ service.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('services_index') }}">back to list</a>

    <a href="{{ path('services_edit', {'id': service.id}) }}">edit</a>

    {{ include('admin/services/_delete_form.html.twig') }}
{% endblock %}
